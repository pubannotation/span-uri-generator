  "version": "0.0.1",
  "author": "shigeru.nakajima <shigeru.nakajima@luxiar.com>",
  "dependencies": {
    "observ": "^0.2.0"
  },
  "devDependencies": {
    "babel": "^4.0.1",
    "babelify": "^5.0.3",
    "browserify": "^8.1.3",
    "jshint": "^2.6.0",
    "mocha": "^2.1.0",
    "watchify": "^2.3.0"
  },
  "directories": {
